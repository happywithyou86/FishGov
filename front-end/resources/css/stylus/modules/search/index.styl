.search {
  .hlt1 {
    font-weight: 800;
  }
  p {
    font-size: 12px;
    line-height: 1;
    opacity: 0.5
  }
  .canvas {
    position: relative;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    transform: translate3d(0);
    transition: .3s ease all;
    padding: 5% 0; /* Temp: Just spacing. */
    .toggle-nav {
      position: absolute;
      z-index: 1;
      left: 10px;
      top: 10px;
    }
  }
  .description {
    font-size: 14px;
    opacity: 1
  }
  .left_side_menu {
    position: fixed;
    top: 0;
    left: -250px;
    width: 250px;
    height: 110vh;
    border-right: 1px solid #DADEE2;
    padding: 15px;
    overflow: scroll;
  }
  .isActive {
    border-color: #1abc9c;
    .search {
      color: #1abc9c;
      transition: all 0.2s ease-in-out
    }
  }
  .pagination {
    border-bottom: 2px solid #DADEE2;
  }
  .products {
    padding-left: 10px;
    .item {
      padding-left: 10px;
    }
  }
  .star {
    cursor: default;
    opacity: 0.7;
    &:hover {
      color: #16a085;
    }
  }
  .search_result {
    height: 100vh;
    overflow: scroll;
    .item {
      padding-top: 5px;
      border-bottom: 1px solid #DADEE2;
    }
  }
  .services {
    padding-left: 10px;
    .item {
      padding-left: 10px;
    }
  }
  .wrapper {
    position: relative;
    width: 100%;
    height: 100%;
    padding: 0;
    overflow: scroll;
  }
  .wrapper.show-nav .canvas {
    transform: translate3d(250px, 0, 0);
  }
}
